generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum BucketType {
  SAVINGS
  MONTHLY
  WANTS
}

model User {
  id        Int           @id @default(autoincrement())
  username  String        @unique
  createdAt DateTime      @default(now())
  cycles    BudgetCycle[]
  txns      Transaction[]
}

model BudgetCycle {
  id       Int     @id @default(autoincrement())
  userId   Int
  monthKey String
  salary   Decimal @db.Decimal(14, 2)

  pctSavings Decimal @db.Decimal(5, 2)
  pctMonthly Decimal @db.Decimal(5, 2)
  pctWants   Decimal @db.Decimal(5, 2)

  allocSavings Decimal @db.Decimal(14, 2)
  allocMonthly Decimal @db.Decimal(14, 2)
  allocWants   Decimal @db.Decimal(14, 2)

  createdAt DateTime @default(now())

  user User          @relation(fields: [userId], references: [id])
  txns Transaction[]

  @@unique([userId, monthKey])
}

model Transaction {
  id        Int        @id @default(autoincrement())
  userId    Int
  cycleId   Int
  bucket    BucketType
  date      DateTime
  note      String
  amount    Decimal    @db.Decimal(14, 2)
  createdAt DateTime   @default(now())

  user  User        @relation(fields: [userId], references: [id])
  cycle BudgetCycle @relation(fields: [cycleId], references: [id])

  @@index([userId, cycleId, bucket, date])
}
